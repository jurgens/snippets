.row
  .span12
    %h1 Boards

    %p= link_to 'Create Board', [:new, :board]

    - unless collection.empty?

      %table.table
        %tr
          %th Board Name
          %th Users
          %th
        - collection.each do |resource|
          %tr
            %td= resource.name
            %td 0
            %td= link_to 'edit', [:edit, resource]
